---
import { lookup } from "../lib/webnative";
import Card from "./Card.astro";

export interface Props {
	token: string;
}

const { token } = Astro.props;
let documents = await lookup(token);
documents.sort((a, b) => b.updated - a.updated);
---

<div
	class='grid justify-center grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3'
>
	{documents.map((doc, i) => <Card doc={doc} i={i} />)}
</div>
